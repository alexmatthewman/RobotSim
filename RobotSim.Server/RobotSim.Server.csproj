<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <SpaRoot>..\robotsim.client</SpaRoot>
    <!-- Use HTTP for the SpaProxy server URL to avoid TLS issues in local dev -->
    <SpaProxyLaunchCommand>npm run dev</SpaProxyLaunchCommand>
    <!-- Use 127.0.0.1 to match Vite binding and avoid localhost/127.0.0.1 mismatch -->
    <SpaProxyServerUrl>http://127.0.0.1:5173</SpaProxyServerUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.SpaProxy">
      <Version>8.*-*</Version>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\robotsim.client\robotsim.client.esproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

</Project>
